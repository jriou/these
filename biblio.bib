	Journal = {Epidemics},
	Keywords = {Basic reproductive number, Imperfect observation, Measles, Stuttering chain, Transmission heterogeneity},
	Month = sep,
	Number = {3},
	Pages = {131--145},
	Title = {Comparing methods for estimating {R}0 from the size distribution of subcritical transmission chains},
	Url = {http://www.sciencedirect.com/science/article/pii/S1755436513000236},
