	keywords = {Humans, Communicable Diseases, Models, Theoretical, Epidemics, Time Factors, Epidemic growth patterns, Epidemic modeling, Individual-based model, Reproduction number, Spatial models, Sub-exponential epidemic growth},
	pages = {66--97}
}

