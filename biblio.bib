	Journal = {Epidemics},
	Keywords = {Chikungunya, Dengue, Europe, Introduction, Risk Assessment},
	Month = sep,
	Number = {3},
	Pages = {175--184},
	Title = {Assessing the risk of importing dengue and chikungunya viruses to the {European} {Union}},
	Url = {http://www.sciencedirect.com/science/article/pii/S1755436509000395},
	Urldate = {2015-11-30},
